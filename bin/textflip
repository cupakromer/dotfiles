#!/usr/bin/env ruby
#
# Modified from https://gist.github.com/lmarburger/7308306
#

abort "Usage: #{File.basename(__FILE__)} text" if ARGV.empty?

text = ARGV[0]
subs = Hash.new{ |h, k| k }.merge!(
  " " => " ",
  "a" => "ɐ",
  "b" => "q",
  "c" => "ɔ",
  "d" => "p",
  "e" => "ǝ",
  "f" => "ɟ",
  "g" => "ƃ",
  "h" => "ɥ",
  "i" => "ı",
  "j" => "ɾ",
  "k" => "ʞ",
  "l" => "l",
  "m" => "ɯ",
  "n" => "u",
  "o" => "o",
  "p" => "d",
  "q" => "b",
  "r" => "ɹ",
  "s" => "s",
  "t" => "ʇ",
  "u" => "n",
  "v" => "ʌ",
  "w" => "ʍ",
  "x" => "x",
  "y" => "ʎ",
  "z" => "z",
  "A" => "∀",
  "B" => "q",
  "C" => "Ɔ",
  "D" => "p",
  "E" => "Ǝ",
  "F" => "Ⅎ",
  "G" => "פ",
  "H" => "H",
  "I" => "I",
  "J" => "ſ",
  "K" => "ʞ",
  "L" => "˥",
  "M" => "W",
  "N" => "N",
  "O" => "O",
  "P" => "Ԁ",
  "Q" => "Q",
  "R" => "ɹ",
  "S" => "S",
  "T" => "┴",
  "U" => "∩",
  "V" => "Λ",
  "W" => "M",
  "X" => "X",
  "Y" => "⅄",
  "Z" => "Z",
  "," => "'",
  "!" => "¡",
  "?" => "¿",
  "(" => ")",
  ")" => "(",
  "[" => "]",
  "]" => "[",
  "." => "˙",
  '"' => ",,",
  "'" => ","
)

flipped = text.reverse.each_char.map{ |c| subs[c] }.join
puts flipped
